{
  "name": "react-openai-apps-sdk",
  "version": "0.1.1",
  "description": "React SDK for OpenAI Apps - Hooks, DevTools, and utilities for building ChatGPT widgets",
  "author": "Filip Popranec <filip.popranec@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/filippofilip95/react-openai-apps-sdk"
  },
  "homepage": "https://github.com/filippofilip95/react-openai-apps-sdk#readme",
  "bugs": {
    "url": "https://github.com/filippofilip95/react-openai-apps-sdk/issues"
  },
  "keywords": [
    "openai",
    "apps-sdk",
    "react",
    "chatgpt",
    "widgets",
    "hooks",
    "devtools",
    "development",
    "debugging",
    "inspector",
    "mcp"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "pnpm run clean && pnpm run build:main && pnpm run build:types",
    "build:main": "tsdown src/index.ts --format cjs,esm --out-dir dist --sourcemap",
    "build:types": "tsdown src/index.ts --dts --out-dir dist",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build && pnpm run typecheck"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsdown": "^0.15.11",
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
